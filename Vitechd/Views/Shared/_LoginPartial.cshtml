@using Microsoft.AspNet.Identity
<div class="fixed-action-btn horizontal click-to-toggle">
    <a class="btn-floating btn-large blue darken-1">
        <i class="large material-icons">account_circle</i>
    </a>
    <ul>
        @if (Request.IsAuthenticated)
    {
        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()
            <li>
                @Html.ActionLink("Hola " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a></li>
    }
}
else
{
    <li><a class="btn-floating red tooltipped" data-position="top" data-delay="50" data-tooltip="Iniciar" href="/Account/Login"><i class="material-icons">fingerprint</i></a></li>
    <li><a class="btn-floating yellow darken-1 tooltipped" data-position="top" data-delay="50" data-tooltip="Registrarse" href="/Account/Register"><i class="material-icons">person_add</i></a></li>
}

    </ul>
</div>

