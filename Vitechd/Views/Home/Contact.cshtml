@using Vitechd.Models
@model MailModels
@{
    ViewBag.Title = "Contáctenos";
}
<section class="container">
    <div class="card">
        <div class="card-body" id="contactCard">
            <div class="row">
                <div class="col col-md-6">
                    <h3>@ViewBag.Title.</h3>
                    <h4>@ViewBag.Message</h4>
                    @using (Html.BeginForm("Contact", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @id = "contact-form", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <i class="material-icons prefix">account_circle</i>@Html.LabelFor(m => m.Name, new { @for = "Name" })
                            @Html.TextBoxFor(m => m.Name, new { @Class = "validate form-control", @type = "text", @id = "Name" })
                        </div>
                        <div class="form-group">
                            <i class="material-icons prefix">phone</i>@Html.LabelFor(m => m.Telephone, new { @for = "Telephone" })
                            @Html.TextBoxFor(m => m.Telephone, new { @Class = "validate form-control", @type = "text", @id = "Telephone" })

                        </div>
                        <div class="form-group">
                            <i class="material-icons prefix">email</i>@Html.LabelFor(m => m.Email, new { @for = "Email" })
                            @Html.TextBoxFor(m => m.Email, new { @Class = "validate form-control", @type = "text", @id = "Email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <i class="material-icons prefix">message</i>@Html.LabelFor(m => m.Message, new { @for = "Message" })
                            @Html.TextAreaFor(m => m.Message, new { @Class = "form-control", @type = "text", @id = "Message" })
                        </div>
                        <button class="btn btn-primary" type="submit" name="action">
                            Enviar
                        </button>
                    }
                </div>
                <div class="col col-md-6">
                    <h3>Encuéntranos</h3>
                    <iframe width="100%" height="80%" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3924.981672772536!2d-84.43122668583135!3d10.34335026986758!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8fa0658322888c2f%3A0xace0bef971665ad5!2sVitechd!5e0!3m2!1ses-419!2scr!4v1532133795144" frameborder="0" style="border:0" allowfullscreen></iframe>
                    </divclass="col>
                </div>
            </div>
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}